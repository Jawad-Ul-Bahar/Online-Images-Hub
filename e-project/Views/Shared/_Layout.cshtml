    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8fafc;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background: linear-gradient(180deg, #0f766e, #115e59);
            color: #fff;
            padding-top: 1rem;
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        .sidebar a {
            color: #e0f2f1;
            display: block;
            padding: 12px 20px;
            text-decoration: none;
            transition: background 0.2s;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #22d3ee;
        }

        /* Main Content */
        .content-wrapper {
            margin-left: 250px;
            padding: 2rem;
            background-color: #f1f5f9;
            min-height: 100vh;
        }

        /* Card Styling */
        .card {
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
            padding: 1.5rem;
            margin-bottom: 2rem;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-2px);
        }

        .card-header {
            font-weight: 600;
            font-size: 1.25rem;
            color: #1e293b;
            margin-bottom: 0.75rem;
        }

        .card-body {
            color: #334155;
        }

        /* Button Styling */
        .btn-primary {
            background-color: #0f766e;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            font-weight: 500;
            transition: background 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0d9488;
        }

        /* Footer */
        footer {
            margin-left: 250px;
            padding: 1rem 2rem;
            background-color: #e2e8f0;
            text-align: center;
            font-size: 0.9rem;
            color: #475569;
            box-shadow: 0 -1px 5px rgba(0,0,0,0.05);
        }
    </style>
</head>

<body class="index-page">

    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="~/MyImages/assets/img/logo.png" alt=""> -->
                <h1 class="sitename">MyImage<span>Prints</span></h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    
                    <li><a asp-action="Create" asp-controller="Orders">Order Now</a></li>
                    
                    <li class="dropdown">
                        <a href="#">
                            <span>
                                @if (Context.Session.GetString("FullName") != null)
                                {
                                    @(Context.Session.GetString("FullName"))
                                }
                                else
                                {
                                    @:Account
                                }
                            </span>
                            <i class="bi bi-chevron-down toggle-dropdown"></i>
                        </a>
                        <ul>
                            @if (Context.Session.GetString("UserEmail") != null)
                            {
                                <li><a asp-controller="Users" asp-action="Profile">My Profile</a></li>
                                <li><a asp-controller="Orders" asp-action="MyOrders">My Orders</a></li>
                                <li><a asp-controller="Users" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Users" asp-action="Login">Login</a></li>
                                <li><a asp-controller="Users" asp-action="Create">Register</a></li>
                            }
                        </ul>
                    </li>


                    @* <li><a href="contact.html">Contact</a></li> *@
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <footer id="footer" class="footer light-background">

        <div class="container">
            <div class="row gy-3">
                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-geo-alt icon"></i>
                    <div class="address">
                        <h4>Address</h4>
                        <p>123 Print Street</p>
                        <p>New York, NY 535022</p>
                        <p></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-telephone icon"></i>
                    <div>
                        <h4>Contact</h4>
                        <p>
                            <strong>Phone:</strong> <span>+1 5589 55488 55</span><br>
                            <strong>Email:</strong> <span>support@myimageprints.com</span><br>
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-clock icon"></i>
                    <div>
                        <h4>Opening Hours</h4>
                        <p>
                            <strong>Mon-Sat:</strong> <span>9AM - 6PM</span><br>
                            <strong>Sunday</strong>: <span>Closed</span>
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h4>Follow Us</h4>
                    <div class="social-links d-flex">
                        <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">MyImagePrints</strong> <span>All Rights Reserved</span></p>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> Distributed by <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/MyImages/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/MyImages/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/MyImages/assets/vendor/aos/aos.js"></script>
    <script src="~/MyImages/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/MyImages/assets/vendor/purecounter/purecounter_vanilla.js"></script>

    <!-- Main JS File -->
    <script src="~/MyImages/assets/js/main.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
    

