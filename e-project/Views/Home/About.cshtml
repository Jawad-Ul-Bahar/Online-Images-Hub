@{
    ViewData["Title"] = "Home Page";
}
<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>About MyImage Prints</h1>
                        <p class="mb-0">At MyImage Prints, we are passionate about turning your digital memories into high-quality prints. Discover our story and commitment to excellence.</p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li class="current">About</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- About Section -->
    <section id="about" class="about section">

        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                    <p class="who-we-are">Who We Are</p>
                    <h3>Bringing Your Memories to Life</h3>
                    <p class="fst-italic">
                        MyImage Prints is dedicated to providing top-quality photo printing services with a focus on customer satisfaction and ease of use.
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>High-quality prints using state-of-the-art printing technology.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Fast and secure online ordering process.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Wide range of print sizes to suit your needs.</span></li>
                    </ul>
                </div>

                <div class="col-lg-6 about-images" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-lg-6">
                            <img src="~/MyImages/assets/img/about-company-1.jpg" class="img-fluid" alt="Printing equipment">
                        </div>
                        <div class="col-lg-6">
                            <div class="row gy-4">
                                <div class="col-lg-12">
                                    <img src="~/MyImages/assets/img/about-company-2.jpg" class="img-fluid" alt="Photo prints">
                                </div>
                                <div class="col-lg-12">
                                    <img src="~/MyImages/assets/img/about-company-3.jpg" class="img-fluid" alt="Customer service">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- /About Section -->
    <!-- Stats Section -->
    <section id="stats" class="stats section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4">

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-emoji-smile color-blue flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="232" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Happy Customers</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-image color-orange flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="521" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Prints Delivered</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-headset color-green flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="1463" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Hours of Support</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

                <div class="col-lg-3 col-md-6">
                    <div class="stats-item d-flex align-items-center w-100 h-100">
                        <i class="bi bi-people color-pink flex-shrink-0"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="15" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Team Members</p>
                        </div>
                    </div>
                </div><!-- End Stats Item -->

            </div>

        </div>

    </section><!-- /Stats Section -->
    <!-- Features Section -->
    <section id="features" class="features section">

        <div class="container">

            <div class="row justify-content-around gy-4">
                <div class="features-image col-lg-6" data-aos="fade-up" data-aos-delay="100"><img src="~/MyImages/assets/img/features-bg.jpg" alt="Photo printing process"></div>

                <div class="col-lg-5 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="200">
                    <h3>Why Choose MyImage Prints</h3>
                    <p>We strive to make your photo printing experience seamless, reliable, and high-quality, with a focus on customer satisfaction.</p>

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-image flex-shrink-0"></i>
                        <div>
                            <h4><a href="" class="stretched-link">Quality Prints</a></h4>
                            <p>Our advanced printing technology ensures vibrant, long-lasting photos.</p>
                        </div>
                    </div><!-- End Icon Box -->

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-truck flex-shrink-0"></i>
                        <div>
                            <h4><a href="" class="stretched-link">Fast Delivery</a></h4>
                            <p>Your prints are delivered quickly and securely to your doorstep.</p>
                        </div>
                    </div><!-- End Icon Box -->

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="500">
                        <i class="bi bi-credit-card flex-shrink-0"></i>
                        <div>
                            <h4><a href="" class="stretched-link">Secure Payments</a></h4>
                            <p>Shop with confidence using our encrypted payment system.</p>
                        </div>
                    </div><!-- End Icon Box -->

                    <div class="icon-box d-flex position-relative" data-aos="fade-up" data-aos-delay="600">
                        <i class="bi bi-headset flex-shrink-0"></i>
                        <div>
                            <h4><a href="" class="stretched-link">Dedicated Support</a></h4>
                            <p>Our team is here to assist you every step of the way.</p>
                        </div>
                    </div><!-- End Icon Box -->

                </div>
            </div>

        </div>

    </section><!-- /Features Section -->

</main>
