@model e_project.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<style>
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.2);
    }

    .form-label {
        margin-bottom: 0.4rem;
    }

    .card {
        background: #fff;
    }
</style>

<main class="main">

    <!-- Login Section -->
    <section id="login" class="section mt-5">
        <div class="container section-title" data-aos="fade-up">
            <h2>Log In to Your Account</h2>
            <p>Access your MyImage Prints account to order prints and manage your orders.</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card shadow-sm p-4 rounded-4 border-0 bg-light">
                        <form asp-action="Login" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-4">
                                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                <input asp-for="Email" class="form-control rounded-pill p-3" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                                <input asp-for="Password" class="form-control rounded-pill p-3" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100 py-2 rounded-pill fs-5">
                                Log In
                            </button>

                            <p class="text-center mt-3 mb-0">
                                Don't have an account?
                                <a href="/Users/Create" class="text-primary fw-bold">Register here</a>.
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
