@model IEnumerable<e_project.Models.PrintSizePrice>
@{
    ViewData["Title"] = "Manage Print Pricing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Print Pricing</h2>

<a asp-action="CreatePrintSize" asp-controller="Admins" class="btn btn-success mb-3">Add New Size/Price</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Print Size</th>
            <th>Price (PKR)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Size</td>
                <td>@item.Price.ToString("0.00")</td>
                <td>
                    <a asp-action="EditPrintSize" asp-controller="Admins" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="DeletePrintSize" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
